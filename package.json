{
  "name": "ts-express-server",
  "version": "1.0.0",
  "description": "TypeScript Express Server",
  "main": "dist/server.js",
  "bin": "dist/server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node server.ts",
    "test": "cross-env NODE_ENV=test jest",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "package": "npm run build && pkg ."
  },
  "pkg": {
    "assets": [
      "env/**/*",
      "node_modules/**/*"
    ],
    "outputPath": "bin",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64"
    ]
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
